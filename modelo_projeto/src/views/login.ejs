<%- include('includes/heading') %>
    <%- include('includes/nav') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Login</h1>
                    <p class="text-center lead">Fa√ßa login ou crie sua conta</p>
                    
                    <%- include('includes/messages') %>
                    
                    <div class="row">
                        <div class="col-lg">
                            <h4>Login:</h4>
                            <form class="form-login" action="/login/login" method="post">
                                <input type="hidden" name="_csrf">
                                <div class="form-group login-email">
                                    <label for="loginEmail" class="mb-1">E-mail</label>
                                    <input type="email" name="email" class="form-control mb-4" name="loginEmail" id="loginEmail"
                                        aria-describedby="emailHelp" placeholder="Seu E-mail">
                                </div>
                                <div class="form-group login-password">
                                    <label for="loginPassword" class="mb-1">Senha</label>
                                    <input type="password" name="password" class="form-control mb-2" name="loginPassword" id="loginPassword"
                                        placeholder="Sua senha">
                                </div>
                                <button type="submit" class="btn btn-primary">Entrar</button>
                            </form>
                        </div>

                        <div class="col-lg">
                            <h4>Crie sua conta:</h4>
                            <form class="form-createAcc" action="/login/register" method="post">
                                <input type="hidden" name="_csrf">
                                <div class="form-group createAcc-name">
                                    <label for="createAccName" class="mb-1">Nome</label>
                                    <input type="text" name="name" class="form-control mb-4" id="createAccName" placeholder="Seu Nome">
                                  </div>
                                <div class="form-group createAcc-email">
                                  <label for="createAccEmail" class="mb-1">E-mail</label>
                                  <input type="email" name="email" class="form-control mb-4" id="createAccEmail" placeholder="Seu E-mail">
                                </div>
                                <div class="form-group createAcc-password">
                                  <label for="createAccPassword" class="mb-1">Crie sua senha</label>
                                  <input type="password" name="password" class="form-control mb-2" id="createAccPassword" placeholder="Senha">
                                </div>
                                <button type="submit" class="btn btn-primary">Criar minha conta</button>
                              </form>
                        </div>
                    </div>
                    <div class="col-lg-2"></div>
                </div>
            </div>

            <%- include('includes/footer') %>